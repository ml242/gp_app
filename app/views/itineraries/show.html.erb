<%# if current_user.id == @itinerary.user_id %>
  <%= link_to 'Edit Itinerary', edit_itinerary_path %> | <%= link_to 'Delete Itinerary', @itinerary, :method => :delete, :confirm => "Are you sure?" %> |

<%# end %>

  <%= link_to 'Itineraries', itineraries_path %>

  <div><h1><%= @itinerary.title %></h1><br></div>

  <div>
    <img src="<%= @itinerary.img_url %>" width='60%'>
    <br>
    <%= @itinerary.description %><br>

    <div>
  <!-- gets the items for each itinerary here -->
      <% @items.each do |item| %>
        <%= item.name %><br>
        <%= item.description %><br>
        <img src="<%= item.img_url %>" width="25%">
      <% end %>
    </div>
  </div>

<div class="fb-share-button" data-href="http://www.goinplac.es" data-type="button_count"></div>

  <button><%= link_to 'Copy itinerary', "/itineraries/#{@itinerary.id}/copy", :method => :get, :confirm => "Do you want to copy this entire itinerary?" %></button>
<%# if current_user.id == @itinerary.user_id %>
  <button><%= link_to 'Add an item to current itinerary', "/itineraries/#{@itinerary.id}/add", :method => :get %></button>
<%# end %>












