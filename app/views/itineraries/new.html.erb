<div class="new-itinerary-page">
  <h1>Create a new itinerary:</h1>

    <div class="itin-form">
    <%= form_for(@itinerary) do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :location %>
    <%= f.text_field :address %><br>

    <%= f.label :image %>
    <%= f.text_field :img_url %><br>

    <%= f.label :description %>
    <%= f.text_area :description, size: "60x5" %><br>

    <div class="create-itin-btn">
      <%= f.submit "CREATE" %>

      <button>
        <%= link_to "CANCEL", itineraries_path %>
      </button>
    </div>
  <% end %>
</div>