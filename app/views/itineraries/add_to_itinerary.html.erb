<section>
<h1> "<%= @item.name %>"</h1>

    <%= form_for(@item) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :img_url %>
    <%= f.text_field :img_url %><br>

    <%= f.label :description %>
    <%= f.text_area :description, size: "60x12" %><br>

    <%= f.submit "Update item" %>
    <%= link_to "Cancel", items_path %>

  <% end %>
</section>