<div class="new-item-page">
  <h1>"<%= @item.name %>"</h1>

  <div class="item-form">
  <%= form_for(@item) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %><br>

  <%= f.label :description %>
  <%= f.text_area :description, size: "60x8" %><br>

  <div class="update-item-btn">
    <%= f.submit "Update item" %>
  </div>
  <button>
    <%= link_to "Cancel", items_path %>
  </button>

  </div>
  <% end %>

</div>
