    <%= image_tag("gp.png", class: "gp-title") %>
    <div class="login-page-container">
      <div class="login-form-box">


        <div class="login-form">
          <%= form_for(:user, :as => :user, :url => session_path(:user)) do |f| %>
          <%= f.text_field :email, :placeholder => 'Enter your email address', :style => "width : 60%", :required => true %><br />
          <%= f.password_field :password, :placeholder => 'Enter your password', :style => "width : 60%", :required => true %>

        <div class="login-btn"><%= f.submit "Login" %></div>

        </div>
        <% end %>
      </div>

    </div>
  </div>

  <div id="fb-button">
    <a href="http://localhost:3000/users/auth/facebook"><img src="http://www.elterre.com/images/connect/facebook.png"></a>
          <%#= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook), :id => 'fb-link' %></div>

  <%#= render "users/shared/links" %>
