<div class="user-show-container">

  <div class="itin-title">
    <h1 class="itineraries-index">Your Itineraries</h1>
  </div>

  <% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
  <% end %>



<div class="new-itinerary">
  <button class="red-red-btn"><%= link_to 'Create Itinerary', new_itinerary_path %></button>
</div>

<div class="user-itin-info">
  <% @itineraries.each do |itinerary| %>

  <!-- gets the items for each itinerary here inside the box-->

  <div class="inside-user-content">
    <h2><%= itinerary.title %></h2>

    <div class="itin-content">
      <a href="/itineraries/<%= itinerary.id %>"><img src="<%= itinerary.img_url %>"></a><br>
      <%= itinerary.description %>
    </div>



    <div class="itin-show-edit-sm">
      <button class="red-red-btn-sm">
        <%= link_to 'Edit', edit_itinerary_path(itinerary.id) %>
      </button>
      <button class="red-red-btn-sm">
        <%= link_to 'Delete', itinerary_path(itinerary.id), :method => :delete, :confirm => "Are you sure?" %>
      </button>
    </div>

  </div>
  <% end %>
  <!-- end of inside-user-content  -->


  <button href="#collapse1" class="nav-toggle red-red-btn">SETTINGS</button>
  <div id="collapse1" style="display:none">
    <%= render 'edit_details' %>
  </div>

</div>



