<div class="user-show-container">

  <div class="itin-title">
    Your Itineraries
  </div>

  <% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
  <% end %>

  <div class="share">
    <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52b062e136d519a7"></script>
    <!-- AddThis Button END -->
  </div>

  <div class="new-itinerary">
    <button class="red-red-btn"><%= link_to 'NEW ITINERARY', new_itinerary_path %></button>
  </div>

  <div class="user-itin-info">
    <% @itineraries.each do |itinerary| %>

    <!-- gets the items for each itinerary here inside the box-->

    <div class="inside-user-content">
      <h2><%= itinerary.title %></h2>

      <div class="user-content">
        <a href="/itineraries/<%= itinerary.id %>"><img src="<%= itinerary.img_url %>"></a>
        <%= itinerary.description %>
      </div>

      <!-- AddThis Button BEGIN -->
      <div class="add-this">
        <a
        class="addthis_button"
        addthis:url="http://goinplac.es"
        addthis:title="Going Places"
        addthis:description="Great Escape Artists Steal (itineraries)">
        <%= image_tag("share.png", class: "sharer-small") %></a>
      </div>

      <div class="itin-show-edit">
        <button>
          <%= link_to 'Edit Itinerary', edit_itinerary_path %>
        </button>
        <button>
          <%= link_to 'Delete Itinerary', @itinerary, :method => :delete, :confirm => "Are you sure?" %>
        </button>
      </div> <!-- end of inside-user-content  -->
    </div>
    <% end %>

  <button href="#collapse1" class="nav-toggle red-red-btn">SETTINGS</button>
    <div id="collapse1" style="display:none">
      <%= render 'edit_details' %>
    </div>

</div>



